<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tw.org.iii.androidlittlehappy.ActSuccess">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="恭喜!   找到好夥伴 "
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"


        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="記得回聊天室聯繫對方 "
        android:textSize="13dp"
        android:textColor="#e9c195"
        android:layout_marginTop="5dp"
        android:textAlignment="center"


        />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        app:lottie_fileName="emoji_wink.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true" />
    <RatingBar
        android:id="@+id/SeachratingBar"
        android:layout_marginTop="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="5"
        android:stepSize="1"
        android:layout_gravity="center_horizontal"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="為對方評個分吧"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="回地圖繼續參與活動"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/buttonview"
        android:id="@+id/btnBackToMap1"/>
</LinearLayout>



